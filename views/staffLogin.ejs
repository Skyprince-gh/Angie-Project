<body class="staff">
    <div class="z-depth-2 animated fadeInDown portal-window blue lighten-1 ">
        <p>Please enter staff information to Log in</p>
        <form class="normal" action="/staffLogin" method="POST">
        <input type="text" name="name" placeholder="name" required maxlength="100">
        <input type="text" name="id" placeholder="staff ID" required maxlength="10">
        <input type="password" name="password" placeholder="password" required>      
        <input type="submit"   placeholder="password" value="login" required>      
        </form>
    </div>
</body>

